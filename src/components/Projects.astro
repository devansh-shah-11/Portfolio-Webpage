---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import PythonIC from "./icons/Python.astro"
import Streamlit from "./icons/Streamlit.astro"
import Tensorflow from "./icons/Tensorflow.astro"
import Firebase from "./icons/Firebase.astro"
import HEIC from "./icons/HEIC.astro"
import Node from "./icons/Node.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  STREAMLIT: {
    name: "Streamlit",
    class: "bg-black text-white",
    icon: Streamlit,
  },
  TENSORFLOW: {
    name: "Tensorflow",
    class: "bg-[#ff6f00] text-white",
    icon: Tensorflow,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-[#ffca28] text-black",
    icon: Firebase,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#3776AB] text-white",
    icon: PythonIC,
  },
  HEIC: {
    name: "HEIC",
    class: "bg-[#ff4b4b] text-white",
    icon: HEIC,
  },
  NODE: {
    name: "Node.js",
    class: "bg-[#68A063] text-white",
    icon: Node,
  },
}
const PROJECTS = [
  {
    title: "Multilingual Speech Translation & RAG (Gujarati-focused)",
    description:
      "Fine-tuned Whisper/NeMo-based ASR and TTS for Gujarati. Built RAG pipelines to provide personalized spiritual-content recommendations to 1.2M+ subscribers across 191 countries (production pipeline work).",
    image: "/projects/multilingual-speech.webp",
    links: { code: "", demo: "" },
  },
  {
    title: "LLM Red-Teaming & Automated Security Suite",
    description:
      "Automated red-teaming framework generating adversarial prompts and scoring model exposures. Implemented synthetic attack corpora based on OWASP-like taxonomy and end-to-end vulnerability triage.",
    image: "/projects/llm-redteam.webp",
    links: { code: "", demo: "" },
  },
  {
    title: "YOLOv8 Waste Segregation Classifier",
    description:
      "Fine-tuned YOLOv8 for local waste categories; integrated synthetic data augmentation and optimized route analytics for municipal adoption.",
    image: "/projects/waste-management.webp",
    links: { code: "", demo: "" },
  },
  {
    title: "Image Captioning (CNN–LSTM)",
    description:
      "Image captioning trained on Flickr8k; produced descriptive captions with BLEU-based evaluation and qualitative improvements using data augmentation.",
    image: "/projects/image-captioning.webp",
    links: { code: "https://github.com/Devasy23/Image_captionning_project", demo: "https://devasy23-image-captionning-project-app-5mulol.streamlit.app/" },
  },
  {
    title: "JPG → HEIF Converter (Streamlit)",
    description:
      "Lightweight Streamlit app for high-efficiency image conversion preserving quality while reducing storage — practical utility used in multiple sample workflows.",
    image: "/projects/jpg-to-heif.webp",
    links: { code: "https://github.com/Devasy23/JPG2HEIF", demo: "https://jpgtoheifconverter.streamlit.app/" },
  },
];
---
<div class="flex flex-col gap-y-12">
  {
    PROJECTS.map((p) => (
      <article class="group flex flex-col md:flex-row gap-6">
        <div class="md:w-1/2">
          <img src={p.image} alt={`Preview for ${p.title}`} class="w-full h-56 object-cover rounded-lg shadow-lg" loading="lazy" />
        </div>

        <div class="md:w-1/2">
          <h3 class="text-2xl font-bold text-gray-100">{p.title}</h3>
          <p class="mt-3 text-gray-300">{p.description}</p>
          <div class="mt-4 flex gap-3">
            {p.links.code && (
              <LinkButton href={p.links.code}>
                <GitHubIcon /> Code
              </LinkButton>
            )}
            {p.links.demo && (
              <LinkButton href={p.links.demo}>
                <LinkIcon /> Preview
              </LinkButton>
            )}
          </div>
        </div>
      </article>
    ))
  }
</div>
---


